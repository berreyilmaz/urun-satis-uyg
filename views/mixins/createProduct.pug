mixin createProduct(product) 
    .col-md-4
        .card
            img(src=`/img/${product.imageUrl}` alt=`${product.name}`).card-img-top
            .card-body
                h4.card-title
                    a(href=`/products/${product.id}`) #{product.name}

                small.text-muted
                    i.fa.fa-try #{product.price}
            .card-footer.text-center

                a(href=`/products/${product.id}`).btn.btn-secondary.btn-sm Details
                
                a(href="#").btn.btn-secondary.btn-sm.ml-3 Add to Cart
